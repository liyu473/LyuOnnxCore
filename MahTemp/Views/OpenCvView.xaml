<UserControl
    x:Class="MahTemp.Views.OpenCvView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MahTemp.Views"
    xmlns:lyu="http://schemas.lyuwpfhelper.com/winfx/xaml"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:MahTemp.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:OpenCvViewModel}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource MahApps.Styles.Button.Flat}" TargetType="Button" />
    </UserControl.Resources>
    <Grid lyu:GridHelper.RowDefinitions="Auto,2*,*">
        <lyu:SimpleStackPanel Orientation="Horizontal" Spacing="12">
            <Button Command="{Binding LoadImageCommand}" Content="导入图片" />
        </lyu:SimpleStackPanel>

        <ListBox
            Grid.Row="1"
            Background="Transparent"
            ItemsSource="{Binding FlowItems}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="VerticalContentAlignment" Value="Stretch" />
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />

                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{StaticResource MahApps.Brushes.Accent3}" />
                        </Trigger>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource MahApps.Brushes.Accent4}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="3" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Padding="6" Background="Transparent">
                        <lyu:SimpleStackPanel Margin="16,10" Spacing="8">
                            <Image Source="{Binding ResultMat, Converter={StaticResource MatToBitmapSourceConverter}}" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="{Binding Index}" />
                        </lyu:SimpleStackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid
            Grid.Row="2"
            Margin="0,10"
            lyu:GridHelper.ColumnDefinitions="Auto,*">
            <lyu:SimpleStackPanel Spacing="24">
                <Button Command="{Binding AddItemCommand}" Content="增加步骤" />
                <Button Content="所选步骤后增加" />
                <Button Content="删除所选步骤" Foreground="Red" />
            </lyu:SimpleStackPanel>

            <Grid Grid.Column="1">
                
            </Grid>
        </Grid>
    </Grid>
</UserControl>
