<UserControl
    x:Class="MahTemp.Views.OpenCvView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MahTemp.Views"
    xmlns:lyu="http://schemas.lyuwpfhelper.com/winfx/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:MahTemp.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:OpenCvViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource MahApps.Styles.Button.Flat}" TargetType="Button" />
    </UserControl.Resources>
    <Grid lyu:GridHelper.RowDefinitions="Auto,*,*">
        <lyu:SimpleStackPanel Orientation="Horizontal" Spacing="12">
            <Button Command="{Binding LoadImageCommand}" Content="导入图片" />
        </lyu:SimpleStackPanel>
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding FlowItems}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="6" Background="Transparent">
                            <lyu:SimpleStackPanel Margin="16,10" Spacing="8">
                                <Image Source="{Binding ResultMat, Converter={StaticResource MatToBitmapSourceConverter}}" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="{StaticResource MahApps.Brushes.Accent}"
                                    Text="{Binding Index}" />
                            </lyu:SimpleStackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Grid Grid.Row="2">

        </Grid>
    </Grid>
</UserControl>
