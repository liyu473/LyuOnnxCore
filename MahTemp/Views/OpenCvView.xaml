<UserControl
    x:Class="MahTemp.Views.OpenCvView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MahTemp.Views"
    xmlns:lyu="http://schemas.lyuwpfhelper.com/winfx/xaml"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:MahTemp.Model"
    xmlns:viewmodels="clr-namespace:MahTemp.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:OpenCvViewModel}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource MahApps.Styles.Button.Flat}" TargetType="Button" />
    </UserControl.Resources>
    <Grid lyu:GridHelper.RowDefinitions="Auto,2*,*">
        <lyu:SimpleStackPanel
            Margin="0,0,0,8"
            Orientation="Horizontal"
            Spacing="12">
            <Button Command="{Binding LoadImageCommand}" Content="导入图片" />
        </lyu:SimpleStackPanel>

        <ListBox
            Grid.Row="1"
            Background="Transparent"
            ItemsSource="{Binding FlowItems}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            SelectedItem="{Binding SelectedFlowItem}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="VerticalContentAlignment" Value="Stretch" />
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />

                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{StaticResource MahApps.Brushes.Accent3}" />
                        </Trigger>

                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True" />
                                <Condition Property="Selector.IsSelectionActive" Value="False" />
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" Value="{StaticResource MahApps.Brushes.Accent3}" />
                        </MultiTrigger>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource MahApps.Brushes.Accent4}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="3" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Padding="6" Background="Transparent">
                        <lyu:SimpleStackPanel Margin="16,10" Spacing="8">
                            <Image Source="{Binding ResultMat, Converter={StaticResource MatToBitmapSourceConverter}}" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="{Binding Index}" />
                        </lyu:SimpleStackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid
            Grid.Row="2"
            Margin="0,10"
            lyu:GridHelper.ColumnDefinitions="Auto,*">
            <lyu:SimpleStackPanel Spacing="24">
                <Button Command="{Binding AddItemCommand}" Content="增加步骤" />
                <Button
                    Command="{Binding RemoveStepCommand}"
                    Content="删除所选步骤"
                    Foreground="Red" />
            </lyu:SimpleStackPanel>


            <ScrollViewer
                Grid.Column="1"
                Margin="20,0,0,0"
                VerticalScrollBarVisibility="Auto">
                <StackPanel DataContext="{Binding SelectedFlowItem.CvSetting}">
                    <TextBlock
                        Margin="0,10,0,10"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="图像处理步骤配置"
                        Visibility="{Binding Converter={StaticResource InvertedNullToVisibilityConverter}}" />

                    <WrapPanel Margin="0,0,0,0" Visibility="{Binding Converter={StaticResource InvertedNullToVisibilityConverter}}">
                        <GroupBox
                            Margin="5"
                            Padding="10"
                            Header="1. 灰度化">
                            <lyu:SimpleStackPanel Spacing="8">
                                <mah:ToggleSwitch
                                    Content="启用灰度化"
                                    IsOn="{Binding IsApplyGrayscale}"
                                    OnContent="已启用"
                                    OffContent="未启用" />
                                <TextBlock
                                    FontSize="10"
                                    FontStyle="Italic"
                                    Foreground="Gray"
                                    Text="将彩色图像转换为灰度图"
                                    TextWrapping="Wrap" />
                            </lyu:SimpleStackPanel>
                        </GroupBox>

                        <!--  高斯模糊  -->
                        <GroupBox
                            Margin="5"
                            Padding="10"
                            Header="2. 高斯模糊">
                            <lyu:SimpleStackPanel Spacing="8">
                                <mah:ToggleSwitch
                                    Content="启用高斯模糊"
                                    IsOn="{Binding GaussianBlur.IsEnabled}"
                                    OnContent="已启用"
                                    OffContent="未启用" />
                                <lyu:SimpleStackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock VerticalAlignment="Center" Text="核大小:" />
                                    <mah:NumericUpDown
                                        Width="100"
                                        Maximum="31"
                                        Minimum="1"
                                        Value="{Binding GaussianBlur.KernelSize}" />
                                </lyu:SimpleStackPanel>
                                <lyu:SimpleStackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock VerticalAlignment="Center" Text="SigmaX:" />
                                    <mah:NumericUpDown
                                        Width="100"
                                        Maximum="10"
                                        Minimum="0"
                                        Value="{Binding GaussianBlur.SigmaX}" />
                                </lyu:SimpleStackPanel>
                            </lyu:SimpleStackPanel>
                        </GroupBox>

                        <!--  二值化  -->
                        <GroupBox
                            Margin="5"
                            Padding="10"
                            Header="3. 二值化">
                            <lyu:SimpleStackPanel Spacing="8">
                                <mah:ToggleSwitch
                                    Content="启用二值化"
                                    IsOn="{Binding Threshold.IsEnabled}"
                                    OnContent="已启用"
                                    OffContent="未启用" />
                                <lyu:SimpleStackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock VerticalAlignment="Center" Text="阈值:" />
                                    <mah:NumericUpDown
                                        Width="100"
                                        Maximum="255"
                                        Minimum="0"
                                        Value="{Binding Threshold.ThresholdValue}" />
                                </lyu:SimpleStackPanel>
                                <lyu:SimpleStackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock VerticalAlignment="Center" Text="最大值:" />
                                    <mah:NumericUpDown
                                        Width="100"
                                        Maximum="255"
                                        Minimum="0"
                                        Value="{Binding Threshold.MaxValue}" />
                                </lyu:SimpleStackPanel>
                            </lyu:SimpleStackPanel>
                        </GroupBox>

                        <!--  查找轮廓  -->
                        <GroupBox
                            Margin="5"
                            Padding="10"
                            Header="4. 查找轮廓">
                            <lyu:SimpleStackPanel Spacing="8">
                                <mah:ToggleSwitch
                                    Content="启用查找轮廓"
                                    IsOn="{Binding FindContours.IsEnabled}"
                                    OnContent="已启用"
                                    OffContent="未启用" />
                                <lyu:SimpleStackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock VerticalAlignment="Center" Text="最小面积:" />
                                    <mah:NumericUpDown
                                        Width="100"
                                        Maximum="10000"
                                        Minimum="0"
                                        Value="{Binding FindContours.MinContourArea}" />
                                </lyu:SimpleStackPanel>
                            </lyu:SimpleStackPanel>
                        </GroupBox>

                        <!--  绘制轮廓  -->
                        <GroupBox
                            Margin="5"
                            Padding="10"
                            Header="5. 绘制轮廓">
                            <lyu:SimpleStackPanel Spacing="8">
                                <mah:ToggleSwitch
                                    Content="启用绘制轮廓"
                                    IsOn="{Binding DrawContours.IsEnabled}"
                                    OnContent="已启用"
                                    OffContent="未启用" />
                                <lyu:SimpleStackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock VerticalAlignment="Center" Text="线条粗细:" />
                                    <mah:NumericUpDown
                                        Width="100"
                                        Maximum="10"
                                        Minimum="1"
                                        Value="{Binding DrawContours.Thickness}" />
                                </lyu:SimpleStackPanel>
                                <mah:ToggleSwitch
                                    Content="绘制索引"
                                    IsOn="{Binding DrawContours.DrawIndex}"
                                    OnContent="显示"
                                    OffContent="隐藏" />
                            </lyu:SimpleStackPanel>
                        </GroupBox>
                    </WrapPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
