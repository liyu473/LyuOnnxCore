<UserControl
    x:Class="MahTemp.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MahTemp.Views"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:MahTemp.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:SettingsViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource MahApps.Styles.MetroHeader.Horizontal}" TargetType="mah:MetroHeader">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="mah:HeaderedControlHelper.HeaderFontSize" Value="14" />
            <Setter Property="mah:HeaderedControlHelper.HeaderFontFamily" Value="Segoe UI" />
            <Setter Property="mah:HeaderedControlHelper.HeaderFontWeight" Value="SemiBold" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <mah:MetroAnimatedTabControl
            mah:TabControlHelper.Transition="LeftReplace"
            mah:TabControlHelper.Underlined="TabPanel"
            Background="Transparent">
            <mah:MetroTabItem Header="主题设置">
                <StackPanel Margin="20,8">
                    <mah:MetroHeader Header="主题:">
                        <ComboBox
                            MinWidth="200"
                            HorizontalAlignment="Right"
                            ItemsSource="{Binding Themes}"
                            SelectedItem="{Binding CurrentTheme}" />
                    </mah:MetroHeader>
                    <mah:MetroHeader Header="强调色:">
                        <ComboBox
                            MinWidth="200"
                            HorizontalAlignment="Right"
                            ItemsSource="{Binding Accents}"
                            SelectedItem="{Binding CurrentAccent}" />
                    </mah:MetroHeader>
                    <mah:MetroHeader Header="背景:">
                        <ComboBox
                            MinWidth="200"
                            HorizontalAlignment="Right"
                            ItemsSource="{Binding Backdrops}"
                            SelectedItem="{Binding CurrentBackdrop}" />
                    </mah:MetroHeader>
                </StackPanel>
            </mah:MetroTabItem>
            <mah:MetroTabItem Header="其他设置">

            </mah:MetroTabItem>
        </mah:MetroAnimatedTabControl>
    </Grid>
</UserControl>
